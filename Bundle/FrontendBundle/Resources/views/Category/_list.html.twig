{% import "@CoreShopFrontend/Common/Macro/currency.html.twig" as currency %}

<div class="col-xs-12">
    <div class="product-col list clearfix">
        <div class="image">
            {% if product.getImage %}
                {#TODO: URL#}
                <a href="#">
                    {{ product.getImage().getThumbnail("coreshop_productList").getHtml({"class": "img-responsive"}) }}
                </a>
            {% endif %}
        </div>
        <div class="caption">
            <h4><a href="#">{{ product.getName }}</a></h4>
            <div class="description">
                {#TODO: Product description#}
            </div>

            <div class="price">
                <span class="price-new">{{ currency.convertAndFormat(product.getPrice) }}</span>
                {#TODO: Savings#}
            </div>
            <div class="cart-button button-group">
                <button type="button" title="" class="btn btn-wishlist" data-original-title="{{ 'wishlist'|trans }}" data-id="{{ product.getId }}">
                    <i class="fa fa-heart"></i>
                </button>
                <button type="button" title="" class="btn btn-compare" data-original-title="{{ 'compare'|trans }}" data-id="{{ product.getId }}">
                    <i class="fa fa-bar-chart-o"></i>
                </button>

                <a href="{{ path('coreshop_shop_add_cart_item', {'productId': product.id}) }}" type="button" class="btn btn-cart">
                    {{ 'add_to_cart'|trans }}
                    <i class="fa fa-shopping-cart"></i>
                </a>
            </div>
        </div>
    </div>
</div>
