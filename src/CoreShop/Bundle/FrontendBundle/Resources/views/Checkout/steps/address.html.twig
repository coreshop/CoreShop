{% extends '@CoreShopFrontend/Checkout/layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block checkout_title %}
    {{ 'coreshop.ui.address'|trans }}
{% endblock %}

{% block checkout %}
    <div class="card">
        <div class="card-body">
            {% if form.invoiceAddress.vars.choices|length > 0 or form.shippingAddress.vars.choices|length > 0 %}
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_errors(form) }}

                <div class="row">

                    <div class="col-12 col-sm-6 invoice-address-selector">
                        {{ form_row(form.invoiceAddress) }}
                    </div>

                    {% if hasShippableItems %}
                        <div class="col-12 col-sm-6 shipping-address-selector" style="{% if hasShippableItems == true and form.useInvoiceAsShipping.vars.data %} display:none; {% endif %}">
                            {{ form_row(form.shippingAddress) }}
                        </div>
                    {% endif %}

                </div>

                {% if hasShippableItems %}
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.useInvoiceAsShipping) }}
                        </div>
                    </div>
                {% endif %}

                <div class="row">

                    <div class="col-12 col-sm-6">
                        <div class="card panel-smart">
                            <div class="card-header">
                                <h4 class="card-title">
                                    {{ 'coreshop.ui.invoice_address'|trans }}
                                </h4>
                            </div>
                            <div class="card-body panel-invoice-address">

                            </div>
                        </div>
                    </div>

                    {% if hasShippableItems %}
                        <div class="col-12 col-sm-6">
                            <div class="card panel-smart">
                                <div class="card-header">
                                    <h4 class="card-title">
                                        {{ 'coreshop.ui.shipping_address'|trans }}
                                    </h4>
                                </div>
                                <div class="card-body panel-shipping-address">

                                </div>
                            </div>
                        </div>
                    {% endif %}

                </div>

                <div class="row">
                    <div class="col-12">
                        <a href="{{ path('coreshop_customer_address_new', {'_redirect': path('coreshop_checkout', {stepIdentifier: identifier})}) }}" class="btn btn-secondary pull-left">
                            {{ 'coreshop.ui.add_new_address'|trans }}
                        </a>
                    </div>
                </div>
                <br>
                 <div class="row">
                    {% set previousStep = coreshop_checkout_steps_get_previous() %}
                    {% if previousStep is not null %}
                        <div class="col-12 col-sm-6">
                            <a href="{{ path('coreshop_checkout', {'stepIdentifier': previousStep}) }}" class="btn">
                                {{ 'coreshop.ui.back'|trans }}
                            </a>
                        </div>
                    {% endif %}
                    <div class="col-12 {{ previousStep is not null ? 'col-sm-6' : '' }}">
                        <button type="submit" class="btn btn-secondary pull-right">
                            {{ 'coreshop.ui.proceed'|trans }}
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}

            {% else %}
                <p>{{ 'coreshop.ui.no_address_found'|trans }}</p>

                <div class="row">
                    <div class="col-12">
                        <a href="{{ path('coreshop_customer_address_new', {'_redirect': path('coreshop_checkout', {stepIdentifier: identifier})}) }}" class="btn btn-secondary pull-left">
                            {{ 'coreshop.ui.add_new_address'|trans }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
