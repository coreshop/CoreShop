{% extends '@CoreShopFrontend/layout.html.twig' %}

{% block content %}
<div id="main-container-home" class="container p-0">
    <div class="row">
        <div class="col-md-3">
            {% if category is defined %}
                {{ render(controller('CoreShop\\Bundle\\FrontendBundle\\Controller\\CategoryController:menuLeftAction', {activeCategory: category})) }}
            {% else %}
                {{ render(controller('CoreShop\\Bundle\\FrontendBundle\\Controller\\CategoryController:menuLeftAction')) }}
            {% endif %}

            {% block left %}
            {% endblock %}
        </div>

        <div class="col-md-9">
            {% block center %}
            {% endblock %}
        </div>
    </div>
</div>
{% endblock %}
