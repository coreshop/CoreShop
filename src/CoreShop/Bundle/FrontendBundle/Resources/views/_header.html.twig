<header id="header-area">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <div class="header-links">

                        <ul class="nav navbar-nav pull-left">
                            <li>
                                <a href="{{ path('coreshop_index') }}">
                                    <i class="fa fa-home d-block d-sm-none" title="{{ 'coreshop.ui.home'|trans }}"></i>
                                    <span class="d-none d-sm-inline">
                                        {{ 'coreshop.ui.home'|trans }}
                                    </span>
                                </a>
                            </li>
                            {{ render(controller('coreshop.frontend.controller.customer:headerAction')) }}
                        </ul>
                    </div>
                </div>

                <div class="col-12 col-sm-6">

                    <div class="pull-right">

                        <div class="btn-group">
                            <!-- TOOD -->
                            <a class="btn btn-link" href="#">
                                {{ 'Compare' }}
                            </a>
                        </div>

                        <div class="btn-group">
                            <a href="{{ path('coreshop_wishlist_summary') }}" class="btn btn-link">
                                {{ 'coreshop.ui.wishlist'|trans }}
                            </a>
                        </div>

                        {{ render(controller('coreshop.frontend.controller.currency:widgetAction')) }}
                        {{ render(controller('coreshop.frontend.controller.language:widgetAction')) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-header">
        <div class="container">
            <div class="row">

                {{ render(controller('coreshop.frontend.controller.search:widgetAction')) }}

                <div class="col-md-6">
                    <div id="logo">
                        <a href="{{ path('coreshop_index') }}">
                            <img src="/bundles/coreshopfrontend/static/images/logo.png" title="CoreShop" alt="CoreShop" class="img-fluid" />
                            {{ 'Core<span class="black">Shop</span>' }}
                        </a>
                    </div>
                </div>

                <div class="col-md-3 pr-0">
                    {{ render(controller('coreshop.frontend.controller.cart:widgetAction')) }}
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('coreshop.frontend.controller.category:menuAction')) }}
</header>