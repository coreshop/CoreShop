{% extends '@CoreShopFrontend/layout-full.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block center %}
    <div id="main-container" class="container p-0">

         <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('coreshop_index') }}">{{ 'coreshop.ui.home'|trans }}</a></li>
            <li class="breadcrumb-item active">{{ 'coreshop.ui.reset_password'|trans }}</li>
        </ol>

        <h2 class="main-heading text-center">
            {{ 'coreshop.ui.reset_password'|trans }} <br/>
        </h2>

        <section class="registration-area">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card panel-smart">
                        <div class="card-body">
                            {{ form_start(form) }}
                                {{ form_rest(form) }}

                                <div class="form-control">
                                    <button type="submit" class="btn btn-black">
                                        {{ 'coreshop.ui.reset'|trans }}
                                    </button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}