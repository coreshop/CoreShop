{% import "@CoreShopFrontend/Common/Macro/product_price.html.twig" as product_price %}

<div class="col-12 mb-4">
    <div class="product-col list clearfix">
        <div class="row">
            <div class="col-12 col-sm-3">
                <div class="image">
                    {% if product.image is asset_image %}
                        <a href="{{ coreshop_path(product, 'coreshop_product_detail') }}">
                            {{ product.image|image_thumbnail_html("coreshop_productList", {"class": "img-fluid"}) }}
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="col-12 col-sm-9">
                <div class="caption">
                    <h4>
                        <a href="{{ coreshop_path(product, 'coreshop_product_detail') }}">{{ product.name }}</a>
                    </h4>
                    <div class="description">
                        {{ product.shortDescription }}
                    </div>

                    <div class="price">
                        {{ product_price.display_product_price(product) }}
                    </div>
                    <div class="cart-button btn-group">
                        <a href="{{ coreshop_path('coreshop_wishlist_add', {product: product.id}) }}" title="" class="btn btn-wishlist">
                            <i class="fa fa-heart"></i>
                        </a>
                        {% if coreshop_inventory_is_available(product) %}
                            {{ render(url('coreshop_partial_cart_add', {'product': product.id})) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
