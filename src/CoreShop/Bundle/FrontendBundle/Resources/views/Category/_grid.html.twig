{% import "@CoreShopFrontend/Common/Macro/product_price.html.twig" as product_price %}

<div class="col-md-4 col-sm-6 mb-4">
    <div class="d-flex flex-column product-col">
        <div class="image">
            {% if product.getImage() %}
                <a href="{{ path('coreshop_product_detail', {name: product.getName, product: product.getId}) }}">
                    {{ product.getImage().getThumbnail("coreshop_productList").getHtml({"class": "img-fluid"})|raw }}
                </a>
            {% endif %}
        </div>
        <div class="caption mb-auto">
            <h4>
                <a href="{{ path('coreshop_product_detail', {name: product.getName, product: product.getId}) }}">{{ product.getName }}</a>
            </h4>
            <div class="description">
                {{ product.getShortDescription }}
            </div>
        </div>
        <div>
            <div class="price">
                {{ product_price.display_product_price(product) }}
            </div>
            <div class="cart-button btn-group">
                <a href="{{ path('coreshop_wishlist_add', {product: product.id}) }}" class="btn btn-wishlist">
                    <i class="fa fa-heart"></i>
                </a>
                {% if coreshop_inventory_is_available(product) %}
                    <form action="{{ path('coreshop_cart_add', {product: product.id}) }}" method="post">
                        <button type="submit" class="btn btn-cart"
                           rel="nofollow">
                            {{ 'coreshop.ui.add_to_cart'|trans }}
                            <i class="fa fa-shopping-cart"></i>
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
