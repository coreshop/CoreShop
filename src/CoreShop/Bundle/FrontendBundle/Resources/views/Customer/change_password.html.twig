{% extends '@CoreShopFrontend/layout-full.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block center %}
    <div id="main-container" class="container p-0">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
                <li class="breadcrumb-item" itemscope itemprop="itemListElement" itemtype="https://schema.org/ListItem">
                    <a href="{{ coreshop_path('coreshop_index') }}" itemprop="item">
                        <span itemprop="name">{{ 'coreshop.ui.home'|trans }}</span>
                    </a>
                    <meta itemprop="position" content="1">
                </li>
                <li class="breadcrumb-item" itemscope itemprop="itemListElement" itemtype="https://schema.org/ListItem">
                    <a href="{{ coreshop_path(customer, 'coreshop_customer_profile') }}" itemprop="item">
                        <span itemprop="name">{{ 'coreshop.ui.profile'|trans }}</span>
                    </a>
                    <meta property="position" content="2">
                </li>
                <li class="breadcrumb-item active" itemscope itemprop="itemListElement" itemtype="https://schema.org/ListItem">
                    <span itemprop="item">
                        <span itemprop="name">{{ 'coreshop.ui.change_password'|trans }}</span>
                    </span>
                    <meta property="position" content="3">
                </li>
            </ol>
        </nav>

        <h2 class="main-heading text-center">
            {{ 'coreshop.ui.change_password'|trans }} <br/>
        </h2>

        <section class="registration-area">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-smart">
                        <div class="card-body">
                            {{ form_start(form) }}
                                {{ form_rest(form) }}

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">
                                        {{ 'coreshop.ui.save'|trans }}
                                    </button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}