{% extends '@CoreShopFrontend/layout-full.html.twig' %}

{% block center %}
<div id="main-container" class="container p-0">

    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('coreshop_index') }}">{{ 'coreshop.ui.home'|trans }}</a></li>
        <li class="breadcrumb-item active"><a href="{{ path('coreshop_customer_profile') }}">{{ 'coreshop.ui.profile'|trans }}</a></li>
    </ol>

    <h2 class="main-heading text-center">
        {{ 'coreshop.ui.account'|trans }}
    </h2>

    <div class="list-group">
        <a href="{{ path('coreshop_customer_orders') }}" title="{{ 'coreshop.ui.orders'|trans }}" class="list-group-item">
            <i class="fa fa-list-ol"></i>
            <span>{{ 'coreshop.ui.order_history_and_details'|trans }}</span>
        </a>
        <a href="{{ path('coreshop_customer_addresses') }}" title="{{ 'coreshop.ui.addresses'|trans }}" class="list-group-item">
            <i class="fa fa-building"></i>
            <span>{{ 'coreshop.ui.addresses'|trans }}</span>
        </a>
        <a href="{{ path('coreshop_customer_settings') }}" title="{{ 'coreshop.ui.settings'|trans }}" class="list-group-item">
            <i class="fa fa-user"></i>
            <span>{{ 'coreshop.ui.personal_information'|trans }}</span>
        </a>
    </div>
</div>
{% endblock %}