{% form_theme form 'bootstrap_4_layout.html.twig' %}

{%- block form_errors -%}
    {% import '@CoreShopFrontend/Common/Macro/messages.html.twig' as messages %}
    {%- if errors|length > 0 -%}
        {%- for error in errors -%}
            {{ messages.error(error.message, false) }}
        {%- endfor -%}
    {%- endif -%}
{%- endblock form_errors -%}